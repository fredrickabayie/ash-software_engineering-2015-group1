<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.taskmanagement.system"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Task Management System</name>

    <description>
        This repository is for Ashesi Software Engineering 2015 Group1. This is a project that helps health officials in Ghana to easily create and assign tasks to nurses.
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        SEC'16
    </author>
    
    
    <preference name="fullscreen" value="true" />
    
    <gap:plugin name="org.apache.cordova.vibration" />
    
    <icon src="res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:qualifier="ldpi" />
    
    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"       gap:platform="android" gap:qualifier="port-ldpi" />
    
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
</widget>